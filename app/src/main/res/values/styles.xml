<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_link" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_link_color</item>
    </style>

    <style name="text_small" parent="AppTheme">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="text_title" parent="AppTheme">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_sub_title" parent="AppTheme">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_important" parent="AppTheme">
        <item name="android:textSize">20sp</item>
    </style>


</resources>
